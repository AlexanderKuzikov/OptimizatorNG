{
  "name": "optimizatorng",
  "version": "1.0.0",
  "description": "Десктопное приложение для оптимизации шаблонов документов.",
  "main": "dist/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "esbuild src/renderer.ts --bundle --platform=browser --outfile=dist/renderer.js",
    "build": "npm run build:main && npm run build:renderer",
    "start": "npm run build && electron .",
    "test": "jest",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^27.0.0",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "jsdom": "^27.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "build": {
    "appId": "com.kombinator.optimizatorng",
    "productName": "Optimizator Next Gen",
    "files": [
      "dist/**/*",
      "index.html",
      "src/templates/*.xml",
      "config.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
        {
            "from": "config.json",
            "to": "config.json"
        }
    ]
  }
}