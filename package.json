{
  "name": "optimizatorng",
  "version": "1.0.0",
  "description": "Десктопное приложение для оптимизации шаблонов документов.",
  "main": "dist/main.js",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --external:electron && esbuild src/renderer.ts --bundle --platform=browser --outfile=dist/renderer.js",
    "start": "npm run build && electron .",
    "test": "jest",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/jest": "^29.5.14",
    "@types/xmldom": "^0.1.34",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "@xmldom/xmldom": "^0.8.10"
  },
  "build": {
    "appId": "com.kombinator.optimizatorng",
    "productName": "Optimizator Next Gen",
    "files": [
      "dist/**/*",
      "index.html",
      "src/templates/*.xml"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}